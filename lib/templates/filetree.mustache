{{!
    @template core/filetree

    File tree.

    Example context (json):
    {
       "files":
       [
            { "title": "Directory", "isdir": true, "files":
                [{
                    "title": "document.pdf",
                    "isdir": false,
                    "icon": "<img src='../../../pix/f/pdf.png' class='icon' alt='pdf'>",
                    "url": "http://example.com/document.pdf"
                },
                {
                    "title": "audio.mp3",
                    "isdir": false,
                    "icon": "<img src='../../../pix/f/mp3.png' class='icon' alt='pdf'>",
                    "url": "http://example.com/audio.mp3"
                }]
            },
            {
                "title": "image.png",
                "isdir": false,
                "icon": "<img src='../../../pix/f/png.png' class='icon' alt='pdf'>",
                "url": "http://example.com/image.png"
            }
        ],
        "foldersexpanded": false
    }
}}

<div class="filetree" id="file-tree-{{uniqid}}" role="tree">
    {{> core/filetree_dir }}
</div>

{{#js}}
require(['core/tree'], function(Tree) {
    new Tree("#file-tree-{{uniqid}}");
});
{{/js}}
