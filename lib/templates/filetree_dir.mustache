{{!
    @template core/filetree_dir

    Directory in filetree.

    Example context (json):
    {
       "files":
       [
            { "title": "Directory", "isdir": true, "files":
                [{
                    "title": "document.pdf",
                    "isdir": false,
                    "icon": "<img src='../../../pix/f/pdf.png' class='icon' alt='pdf'>",
                    "url": "http://example.com/document.pdf"
                },
                {
                    "title": "audio.mp3",
                    "isdir": false,
                    "icon": "<img src='../../../pix/f/mp3.png' class='icon' alt='pdf'>",
                    "url": "http://example.com/audio.mp3"
                }]
            },
            {
                "title": "image.png",
                "isdir": false,
                "icon": "<img src='../../../pix/f/png.png' class='icon' alt='pdf'>",
                "url": "http://example.com/image.png"
            }
        ],
        "foldersexpanded": false
    }
}}


{{#files}}
    {{#isdir}}
        <div class="fileitem" role="treeitem"
            aria-expanded="{{#foldersexpanded}}true{{/foldersexpanded}}{{^foldersexpanded}}false{{/foldersexpanded}}">
            {{title}}
            <div role="group">
                {{> core/filetree_dir }}
            </div>
        </div>
    {{/isdir}}
    {{^isdir}}
        {{> core/filetree_file }}
    {{/isdir}}
{{/files}}